decentralized-user-auth/
├── decentralized-user-auth.php            # Main plugin bootstrap file
├── uninstall.php                          # Cleanup logic on uninstall
├── README.md                              # Plugin overview and usage guide

├── bootstrap/                             # Plugin loader and service registration
│   ├── class-plugin.php                   # Main bootstrap class
│   └── class-service-loader.php           # Loads and wires all services

├── core/                                  # Core service classes (auth, schema, user)
│   ├── class-user-schema.php              # Handles DB schema setup
│   ├── class-auth-token.php               # Stateless token generation
│   ├── class-user-linker.php              # Linking/unlinking logic
│   ├── class-user-hooks.php               # Hooks: register, delete, remove
│   ├── class-wp-user.php                  # Extended WP_User logic
│   └── class-user-resolver.php            # Site-scoped user lookup (replaces get_user_by)

├── ajax/                                  # AJAX controllers
│   └── class-ajax-controller.php          # Handles all AJAX endpoints

├── admin/                                 # Admin UI components
│   ├── class-settings-page.php            # Settings page renderer
│   ├── class-linked-accounts-page.php     # Linked accounts UI
│   └── views/                             # HTML partials
│       ├── settings-form.php
│       └── linked-accounts-table.php

├── assets/                                # Styling and JS
│   ├── css/
│   │   └── admin.css
│   ├── images/
│   └── js/
│       └── roaming.js

├── languages/
│   └── decentralized-user-auth.pot

├── mu-loader/
│   └── decentralized-auth-loader.php      # MU plugin loader

├── overrides/                             # WordPress core overrides
│   ├── class-wp-user.php                  # DUA_WP_User class
│   └── pluggable.php                      # get_user_by override

├── config/                                # Constants, defaults, and plugin config
│   └── constants.php                      # DUA_PLUGIN_DIR, version, etc.
